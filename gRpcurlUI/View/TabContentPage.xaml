<UserControl
    x:Class="gRpcurlUI.View.TabContentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:gRpcurlUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:gRpcurlUI.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=netstandard"
    xmlns:viewmodel="clr-namespace:gRpcurlUI.ViewModel"
    d:DataContext="{d:DesignInstance viewmodel:TabContentPageViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource DefaultPageBackground}"
    FontFamily="{DynamicResource DefaultFontFamily}"
    mc:Ignorable="d">

    <UserControl.Resources>

        <system:Double x:Key="TopRowHeight">220</system:Double>

        <Style
            x:Key="ExecutePageProjectListBoxStyle"
            BasedOn="{StaticResource ProjectListBoxStyle}"
            TargetType="{x:Type ListBox}">
            <Setter Property="SelectionMode" Value="Single" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsRemoveMode}" Value="True">
                    <Setter Property="SelectionMode" Value="Multiple" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="ProjectListHeaderTemplate" TargetType="ContentControl">

            <StackPanel Style="{StaticResource OparetionAreaStackPanelStyle}">

                <Button
                    x:Name="ExportButton"
                    Command="{Binding ExportCommand}"
                    Style="{StaticResource IconButtonStyle}"
                    Tag="{StaticResource Export}">
                    <Button.ToolTip>
                        <ToolTip Content="Export Project" Style="{StaticResource DefaultToolTipStyle}" />
                    </Button.ToolTip>
                </Button>

                <Button
                    x:Name="ImportButton"
                    Command="{Binding ImportCommand}"
                    Style="{StaticResource IconButtonStyle}"
                    Tag="{StaticResource Import}">
                    <Button.ToolTip>
                        <ToolTip Content="Import Project" Style="{StaticResource DefaultToolTipStyle}" />
                    </Button.ToolTip>
                </Button>

                <Button
                    x:Name="AddButton"
                    Command="{Binding AddCommand}"
                    Style="{StaticResource IconButtonStyle}"
                    Tag="{StaticResource Add}">
                    <Button.ToolTip>
                        <ToolTip Content="Add Project" Style="{StaticResource DefaultToolTipStyle}" />
                    </Button.ToolTip>
                </Button>

                <Button
                    x:Name="RemoveButton"
                    Command="{Binding RemoveCommand}"
                    CommandParameter="1"
                    Style="{StaticResource IconButtonStyle}"
                    Tag="{StaticResource Remove}">
                    <Button.ToolTip>
                        <ToolTip Content="Remove Project" Style="{StaticResource DefaultToolTipStyle}" />
                    </Button.ToolTip>
                </Button>

                <Button
                    x:Name="CancelButton"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource IconButtonStyle}"
                    Tag="{StaticResource Cancel}"
                    Visibility="Collapsed">
                    <Button.ToolTip>
                        <ToolTip Content="Cancel" Style="{StaticResource DefaultToolTipStyle}" />
                    </Button.ToolTip>
                </Button>

            </StackPanel>

            <ControlTemplate.Triggers>
                <DataTrigger Binding="{Binding IsRemoveMode}" Value="True">
                    <Setter TargetName="ExportButton" Property="Visibility" Value="Collapsed" />
                    <Setter TargetName="ImportButton" Property="Visibility" Value="Collapsed" />
                    <Setter TargetName="AddButton" Property="Visibility" Value="Collapsed" />
                    <Setter TargetName="CancelButton" Property="Visibility" Value="Visible" />
                </DataTrigger>
            </ControlTemplate.Triggers>

        </ControlTemplate>

    </UserControl.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                x:Name="LeftColumn"
                Width="200"
                MinWidth="100"
                MaxWidth="450" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <controls:HeaderContent Title="{Binding ProjectContext.ProjectType}">

            <controls:HeaderContent.Header>
                <ContentControl Template="{StaticResource ProjectListHeaderTemplate}" />
            </controls:HeaderContent.Header>

            <ListBox
                ItemsSource="{Binding ProjectContext.Projects, Mode=OneWay}"
                SelectedValue="{Binding SelectedProject, Mode=TwoWay}"
                Style="{StaticResource ExecutePageProjectListBoxStyle}" />

        </controls:HeaderContent>

        <GridSplitter Grid.Column="1" Style="{StaticResource VerticalGridSplitterStyle}" />

        <Grid Grid.Column="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    x:Name="MidColumn"
                    Width="300"
                    MinWidth="100"
                    MaxWidth="700" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="{StaticResource TopRowHeight}" MaxHeight="{StaticResource TopRowHeight}" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <controls:OperationInputArea Title="{Binding SelectedProject.ProjectName, Mode=TwoWay}" Content="{Binding SelectedProject, Mode=OneWay}" />

                <Border Grid.Row="1" Background="{DynamicResource DefaultBorderBrush}" />

                <controls:HeaderContent Title="Request" Grid.Row="2">

                    <controls:HeaderContent.Header>

                        <StackPanel Style="{StaticResource OparetionAreaStackPanelStyle}">

                            <Button
                                Command="{Binding SendCommand}"
                                IsEnabled="{Binding IsNotSending}"
                                Style="{StaticResource IconButtonStyle}"
                                Tag="{StaticResource Send}">
                                <Button.ToolTip>
                                    <ToolTip Content="Send" Style="{StaticResource DefaultToolTipStyle}" />
                                </Button.ToolTip>
                            </Button>

                            <Button
                                Command="{Binding SendCancelCommand}"
                                IsEnabled="{Binding IsSending}"
                                Style="{StaticResource IconButtonStyle}"
                                Tag="{StaticResource Cancel}">
                                <Button.ToolTip>
                                    <ToolTip Content="Cancel" Style="{StaticResource DefaultToolTipStyle}" />
                                </Button.ToolTip>
                            </Button>

                            <Button
                                Command="{Binding SendContentFormatCommand}"
                                Style="{StaticResource IconButtonStyle}"
                                Tag="{StaticResource Format}">
                                <Button.ToolTip>
                                    <ToolTip Content="Fromat Text" Style="{StaticResource DefaultToolTipStyle}" />
                                </Button.ToolTip>
                            </Button>

                            <Button
                                Command="{Binding TextBoxClearCommand}"
                                CommandParameter="1"
                                Style="{StaticResource IconButtonStyle}"
                                Tag="{StaticResource Clear}">
                                <Button.ToolTip>
                                    <ToolTip Content="Clear Text" Style="{StaticResource DefaultToolTipStyle}" />
                                </Button.ToolTip>
                            </Button>

                        </StackPanel>

                    </controls:HeaderContent.Header>

                    <ContentControl Style="{StaticResource DefaultEditAreaContentControlStyle}">
                        <TextBox Style="{StaticResource DefaultEditTextBoxStyle}" Text="{Binding SelectedProject.SendContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </ContentControl>

                </controls:HeaderContent>

            </Grid>

            <GridSplitter Grid.Column="1" Style="{StaticResource VerticalGridSplitterStyle}" />

            <Grid Grid.Column="2">

                <Grid.RowDefinitions>
                    <RowDefinition
                        x:Name="RightRow"
                        Height="400"
                        MinHeight="{StaticResource TopRowHeight}"
                        MaxHeight="700" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <controls:HeaderContent Title="Response">

                    <controls:HeaderContent.Header>

                        <StackPanel Style="{StaticResource OparetionAreaStackPanelStyle}">

                            <ProgressBar
                                Width="160"
                                Height="8"
                                Margin="4"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                IsIndeterminate="{Binding IsSending}"
                                Style="{StaticResource DefaultProgressBarStyle}"
                                Visibility="{Binding SendingProgressVisible, Mode=OneWay}" />

                            <ToggleButton
                                Height="30"
                                Content="Clear"
                                IsChecked="{Binding ClearResponse}"
                                Style="{StaticResource CheckedToggleButtonStyle}" />

                            <Button
                                HorizontalAlignment="Right"
                                Command="{Binding TextBoxClearCommand}"
                                CommandParameter="2"
                                Style="{StaticResource IconButtonStyle}"
                                Tag="{StaticResource Clear}">
                                <Button.ToolTip>
                                    <ToolTip Content="Clear Text" Style="{StaticResource DefaultToolTipStyle}" />
                                </Button.ToolTip>
                            </Button>

                        </StackPanel>

                    </controls:HeaderContent.Header>

                    <ContentControl Style="{StaticResource DefaultEditAreaContentControlStyle}">
                        <TextBox
                            IsReadOnly="True"
                            Style="{StaticResource DefaultEditTextBoxStyle}"
                            Text="{Binding StandardOutput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </ContentControl>

                </controls:HeaderContent>

                <GridSplitter Grid.Row="1" Style="{StaticResource HorizontalGridSplitterStyle}" />

                <controls:HeaderContent Title="Error" Grid.Row="2">

                    <controls:HeaderContent.Header>

                        <StackPanel Style="{StaticResource OparetionAreaStackPanelStyle}">

                            <Button
                                Command="{Binding TextBoxClearCommand}"
                                CommandParameter="3"
                                Style="{StaticResource IconButtonStyle}"
                                Tag="{StaticResource Clear}">
                                <Button.ToolTip>
                                    <ToolTip Content="Clear Text" Style="{StaticResource DefaultToolTipStyle}" />
                                </Button.ToolTip>
                            </Button>

                        </StackPanel>

                    </controls:HeaderContent.Header>

                    <ContentControl Style="{StaticResource DefaultEditAreaContentControlStyle}">
                        <TextBox
                            IsReadOnly="True"
                            Style="{StaticResource DefaultEditTextBoxStyle}"
                            Text="{Binding StandardError, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </ContentControl>

                </controls:HeaderContent>

            </Grid>

        </Grid>

    </Grid>

</UserControl>

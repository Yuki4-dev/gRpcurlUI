<Page x:Class="gRpcurlUI.View.TabContentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:gRpcurlUI.View"
      xmlns:viewmodel="clr-namespace:gRpcurlUI.ViewModel" 
      xmlns:controls="clr-namespace:gRpcurlUI.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TabContentPage">

    <Page.DataContext>
        <viewmodel:TabContentPageViewModel x:Name="ViewModel"/>
    </Page.DataContext>

    <Page.Resources>

        <Style x:Key="SettingButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">

                        <StackPanel Grid.Row="1"
                                    Background="{TemplateBinding Background}"
                                    Orientation="Horizontal">

                            <Canvas Width="30"
                                    Height="48"
                                    Margin="4">

                                <Path Width="24"
                                      Height="24"
                                      Data="{StaticResource Setting}"
                                      Fill="{StaticResource DefaulIconBrush}"
                                      Stretch="Uniform" />

                            </Canvas>

                            <TextBlock FontSize="16"
                                       Style="{StaticResource DefaultTextBlockStyle}"
                                       VerticalAlignment="Center"
                                       Text="Setting"/>

                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="ProjectListHeaderTemplate" TargetType="ContentControl">

            <StackPanel Style="{StaticResource OparetionAreaStackPanelStyle}">

                <Button  x:Name="ExportButton"
                         Style="{StaticResource EditAreaButtonStyle}"
                         Command="{Binding ExportCommand}"
                         Tag="{StaticResource Export}"
                         Content="Export"/>

                <Button  x:Name="ImportButton"
                         Style="{StaticResource EditAreaButtonStyle}"
                         Command="{Binding ImportCommand}"
                         Tag="{StaticResource Import}"
                         Content="Import"/>

                <Button  x:Name="AddButton"
                         Style="{StaticResource EditAreaButtonStyle}"
                         Command="{Binding AddCommand}"
                         Tag="{StaticResource Add}"
                         Content="Add"/>

                <Button x:Name="RemoveButton"
                        Style="{StaticResource EditAreaButtonStyle}"
                        Command="{Binding RemoveCommand}"
                        CommandParameter="1"
                        Tag="{StaticResource Remove}"
                        Content="Remove"/>

                <Button x:Name="CancelButton"
                        Visibility="Collapsed"
                        Style="{StaticResource EditAreaButtonStyle}"
                        Command="{Binding CancelCommand}"
                        Tag="{StaticResource Cancel}"
                        Content="Cancel"/>

            </StackPanel>

            <ControlTemplate.Triggers>
                <DataTrigger Binding="{Binding IsRemoveMode}" Value="True">
                    <Setter TargetName="ExportButton" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="ImportButton" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="AddButton" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="CancelButton" Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </ControlTemplate.Triggers>

        </ControlTemplate>

    </Page.Resources>

    <Grid x:Name="MainHost">

        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="LeftColumn" MinWidth="100" MaxWidth="450" Width="200"/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <controls:HeaderContent Title="{Binding ExecutePageViewModel.Context.ProjectType}">

                <controls:HeaderContent.Header>
                    <ContentControl Template="{StaticResource ProjectListHeaderTemplate}"/>
                </controls:HeaderContent.Header>

                <controls:ProjectListBox IsMultiSelect="{Binding IsRemoveMode}"
                                         SelectedCommand="{Binding SelectedCommand}"
                                         ItemsSource="{Binding ExecutePageViewModel.Context.Projects}"/>

            </controls:HeaderContent>

            <Button Grid.Row="1"
                    Style="{StaticResource SettingButtonStyle}"
                    Click="SettingButton_Click"/>

        </Grid>

        <GridSplitter Grid.Column="1"
                      Style="{StaticResource DefaultGridSplitterStyle}"/>

        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden"
               Grid.Column="2"/>

    </Grid>
</Page>
